/* 伪类实现细线 */
.bdr::after{
  content: "";
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background-color:#ccc;
}
.bdr{
  position: relative;
}
/* 灰色分割快 */
.divider{
  height:20rpx;
  background: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgb(0,0,0,.1) inset;
}
/* 箭头 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform: rotate(45deg);
}

/* 评分 */
.star-after{
  color:#e2e2e2;
}
.star-before{
  color:#ff9900;
  position: absolute;
  top:0;
  width:75%;
  overflow: hidden;
}
/* 超出范围隐藏 */
.ell{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 正在加载 公共样式 */
.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100px;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40px;
  height: 40px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}

/* 列表 */
.cell{
  font-size:16px;
  background-color:#fff;
}
.cell-item{
  padding:30rpx 20rpx;
  border-bottom: 1rpx solid #ddd;
}